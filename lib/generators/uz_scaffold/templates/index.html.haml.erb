.page-header
  %h1 <%= @model_name.humanize.pluralize %>
.row.search-row
  .col-md-12
    = bs_search admin_<%= @model_name.underscore.pluralize %>_path
.row
  .col-md-6
    = link_to "New <%= @model_name %>", new_admin_<%= @model_name.underscore %>_path, :class => 'btn btn-primary'
  .col-md-6
    =paginate @<%= @model_name.underscore.pluralize %>
%table.table.table-striped
  %thead
    %tr
<% @columns.each do |p| %>      =bs_table_header :<%= p[:name].humanize %>
<% end %>
      %th
  %tbody
    - @<%= @model_name.underscore.pluralize %>.each do |<%= @model_name.underscore %>|
      %tr
<% @columns.each do |p| %>        %td= bs_display(<%= ":#{p[:display]}" %>, <%= "#{@model_name.underscore}.#{p[:name]}" %>)
<% end %>
        %td= bs_display(:links, { :edit => edit_admin_<%= @model_name.underscore %>_path(<%= @model_name.underscore %>), :delete => admin_<%= @model_name.underscore %>_path(<%= @model_name.underscore %>) })
=paginate @<%= @model_name.underscore.pluralize %>
