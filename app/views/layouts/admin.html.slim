- title "Admin Area"
doctype 5
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= setting(:general, :website_title) + (content_for?(:title) ? " | " + content_for(:title) : "")
    = csrf_meta_tags
    = stylesheet_link_tag "admin", :media => "all"
    = javascript_include_tag "admin"
  body      
    -if admin?
      .navbar.navbar-inverse.navbar-fixed-top role="navigation" 
        .container-fluid
          .navbar-header
            a.navbar-brand href="#{uzcommon.admin_root_path}"= setting(:general, :website_title) + " - Admin Area"
          .navbar-collapse
            ul.nav.navbar-nav.navbar-right
              li
                a  href="#{uzcommon.admin_logout_path}" Logout
      .container-fluid
        .row
          .col-sm-3.col-md-2.sidebar
            ul.nav.nav-sidebar
              -if UZ_ADMIN_DASHBOARD
                li
                  a  class=(('active' if action?('dashboard'))) href=("/admin/dashboard" )  Dashboard
              li.nav-header Content
              = render :partial => "uzcommon/admin/menu-items", :formats => [:html]
              -SettingGroup.all.group_by{|i| i.main_group}.each do |k, v|
                li.nav-header= k
                -v.each do |g|
                  li
                    a  class=(('active' if action?(g.key))) href=("#{uzcommon.admin_settings_group_path(g.key)}" ) 
                      = g.display_name
          .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
            = yield
            hr
            footer
              p Â© Eat 2015
    -else
      = yield
  .custom-modal-loading
