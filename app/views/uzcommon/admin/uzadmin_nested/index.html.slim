.page-header
  .row
    .col-md-8
      h1: a href="#{uzcommon.admin_uzadmin_index_url(@base_meta.base_path)}"= @base_meta.humanized_name_plural
    .col-md-4.header-buttons
      -if @relationship.meta.can :create
        = link_to "New #{@meta.humanized_name}", uzcommon.admin_uzadmin_nested_new_path(@base_meta.base_path, @base_instance.id, @relationship.nested_path), :class => 'btn btn-primary'        
  .row: .col-md-12: ol.breadcrumb    
    li: a href="#{uzcommon.admin_uzadmin_edit_path(@base_meta.base_path, @base_instance.id)}"= @base_instance.send(@base_meta.title_field)
    li= @meta.humanized_name_plural


-if @meta.page_size
  .row: .col-md-12.pull-right= paginate @collection, :views_prefix => 'admin'

table.table.table-striped
  =render "uzcommon/admin/uzadmin_partials/thead"

  tbody class="#{'sortable' if @meta.sort == :sort}" data-url="#{uzcommon.admin_uzadmin_nested_sort_path(@base_meta.base_path, @base_instance.id, @relationship.nested_path)}"
    - @collection.each do |m|
      tr id="#{@meta.symbol}_#{m.id}"
        =render partial: "uzcommon/admin/uzadmin_partials/td_sort", locals: { m: m }
        =render partial: "uzcommon/admin/uzadmin_partials/index_fields", locals: { m: m }
        td.links
          -if @relationship.meta.can :view
            = link_to "View", uzcommon.admin_uzadmin_nested_view_path(@base_meta.base_path, @base_instance.id, @relationship.nested_path, m), :class => 'btn btn-primary'
          -if @relationship.meta.can :edit
            = link_to "Edit", uzcommon.admin_uzadmin_nested_edit_path(@base_meta.base_path, @base_instance.id, @relationship.nested_path, m), :class => 'btn btn-primary'
          -if @relationship.meta.can :delete
            = link_to "Delete", uzcommon.admin_uzadmin_nested_destroy_path(@base_meta.base_path, @base_instance.id, @relationship.nested_path, m.id), :method => :delete, :data => { :confirm => "Are you sure?" }, :class => 'btn btn-danger'

          -@meta.relationships.select{|r| r.type == :has_many}.each do |r|
            = link_to "#{r.humanized_name_plural} (#{m.send(r.field).count})", uzcommon.admin_uzadmin_nested_index_path(@meta.base_path, m.id, r.nested_path), class: 'btn btn-primary', target: "_blank"

          -@meta.custom_pages.each do |c|
            = link_to "#{c.title}", uzcommon.admin_uzadmin_nested_index_path(@meta.base_path, m.id, c.nested_path), class: 'btn btn-primary', target: "_blank"

          -@meta.links.each do |l|
            -href = l.href.call(m)
            = link_to "#{l.name}", href, class: 'btn btn-primary', target: "_blank"

-if @meta.page_size
  .row: .col-md-12.pull-right= paginate @collection, :views_prefix => 'admin'
