-if options[:options].is_a?(Hash)
  -select_options = options[:options].to_a
  -select_options = select_options.map{ |id, value| [value, id.to_s] }  
-else
  -select_options = options[:options]

= render :layout => "fields/wrapper_for_input", :locals => { :f => f, :field_name => field_name, :options => options } do
  = f.select field_name, options_for_select(select_options, f.object.send(field_name)), {}, :class => 'form-control'
